<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Gray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="267*" />
            <ColumnDefinition Width="432*" />
            <ColumnDefinition Width="101*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="3" Background="LightGray" BorderBrush="Black" BorderThickness="1" Margin="5,5,5,5">
            <StackPanel>
                <TextBlock Text="Sidebar" FontSize="50" FontWeight="Thin" Margin="10"/>
                <Button x:Name="Btn1" Content="login" Margin="10" Click="Btn1_Click" Visibility="Hidden"/>
                <Button x:Name="Btn2" Content="Button 2" Margin="10" Click="Btn2_Click" Visibility="Hidden"/>
                <Button x:Name="Btn3" Content="Button 3" Margin="10" Click="Btn3_Click" Visibility="Hidden"/>
            </StackPanel>
        </Border>
        <!--- Chat textbox legyen fix helyen mindig -->
        <TextBox x:Name="Chat"
                 Grid.Column="1"
                 Grid.Row="1"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Bottom"
                 Margin="10,0,0,10"
                 TextWrapping="Wrap"
                 Text="Ide írj valamit"
                 Width="200"
                 Height="20"
                 RenderTransformOrigin="0.5,0.5"
                 KeyDown="Chat_KeyDown" 
                 Visibility="Hidden" Grid.RowSpan="2"/>
        <Label x:Name="ChatLbl" Grid.Column="1" Content="" HorizontalAlignment="Left" Margin="12,12,0,0" VerticalAlignment="Top" Grid.Row="0" Grid.RowSpan="2"/>

        <!--- Logindata -->
        <StackPanel x:Name="Loginpanel" Visibility="Visible" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="247" Height="133"  Grid.RowSpan="2">
            <Grid Visibility="Hidden">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="auto"/>

                </Grid.ColumnDefinitions>
                <Label x:Name="lblUsr" Content="UserName" Width="72" Grid.Column="0" HorizontalAlignment="Left" Height="26" VerticalAlignment="Center" Margin="-4,0,0,0" />
                <TextBox x:Name="txtboxUsrname" TextWrapping="Wrap" Grid.Column="1" Text="Username" Height="20" Margin="0,15,-19,15" />
                <TextBox x:Name="txtboxPwd" Grid.Column="1" Grid.Row="1" Text="Password" Height="20" Margin="0,15,-19,15"/>
                <Label x:Name="lblPwd" HorizontalAlignment="Left"  Content="Password" Width="65" Grid.Row="1" Margin="0,7,0,18"/>
                <Button x:Name="btnLogin" Content="Login" Click="btnLogin_Click" Grid.Column="1" Margin="0,0,61,17" Grid.Row="2"/>
                <Button x:Name="btnReg" Content="Register" Grid.Column="1" Margin="55,0,-19,0" Grid.Row="2"  VerticalAlignment="Top" Height="33" Click="BtnReg_Click"/>

            </Grid>
        </StackPanel>
        <!-- RegisterData -->

        <StackPanel x:Name="Panelprofiledata" Visibility="Hidden" Grid.Column="1" Margin="381,0,0,0" Background="DarkGray" Height="422" VerticalAlignment="Center" Grid.RowSpan="3" Grid.ColumnSpan="2">
            <TextBlock Text="Profile Data" TextAlignment="Center" />
            <Label x:Name="Hudlbl" Content=""/>
        </StackPanel>
        <StackPanel x:Name="RegPanel" Grid.Column="1" Grid.Row="1" Margin="0,0,84,0" Visibility="Hidden">
            <Grid Width="244">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>


                </Grid.ColumnDefinitions>
                <Label x:Name="lblRegPanUsr" Content="Username: " VerticalAlignment="Center"/>
                <TextBox x:Name="txtRegPanUsr" Grid.Column="1" Width="100" Height="20" HorizontalAlignment="Left" Margin="5,15,0,15"/>
                <TextBox x:Name="txtRegPanPwd1" Grid.Column="1" Grid.Row="1" Width="100" Height="20" HorizontalAlignment="Left" Margin="5,15,0,15"/>
                <TextBox x:Name="txtRegPanPwd2" Grid.Column="1" Grid.Row="2" Width="100" Height="20" HorizontalAlignment="Left" Margin="5,15,0,15"/>
                <Label x:Name="lblRegPanPwd1" Content="Password #1: " VerticalAlignment="Center" Grid.Row="1"/>
                <Label x:Name="lblRegPanPwd2" Content="Password #1: " VerticalAlignment="Center" Grid.Row="2"/>
                <Button x:Name="btnRegPan" Grid.Row="3" Grid.Column="1" Height="20" Content="Regisztráció" Margin="5,15,0,15" Click="btnRegPan_Click"/>
            </Grid>

        </StackPanel>
        <!--Nitification-->
        <StackPanel x:Name="NotiPanel" Grid.Column="1" Grid.Row="0" VerticalAlignment="Top" Height="100" Width="200">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="NotiLbl" Content="" Grid.ColumnSpan="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Image x:Name="NotiImg" x:FieldModifier="public" Grid.ColumnSpan="2" Grid.RowSpan="1" Width="32" Height="32" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,0"/>
            </Grid>
        </StackPanel>




    </Grid>
</Window>
